

<div  id="particles">

  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
    <div id="register">
       <h4 class="modal-title">Register to see all our awesome stuff</h4>
     
          <div class="modal-body">
              <%= form_for :user, url: register_path do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation %>
            </div>
            <%= f.submit %>
            <% end %>
          </div>
      <button type="button" class="btn btn-info center-block title-spaced" >REGISTRATE</button>
    </div><!--modal-content -->
  
   
    </div>
   
  </div>
</div>


<!-- LoginModal -->

<div class="modal" id="my_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Yay! Log in again all the times you want!</h4>
      </div>
      <div class="modal-body">
       <%= form_tag login_path do %>
         <%= text_field_tag :email, nil, placeholder: "email" %>
         <%= password_field_tag :password, nil, placeholder: "password" %>

         <%= submit_tag ("GO") %>
       <% end %>
       
      </div>
    </div><!--modal-content -->
  </div><!--modal-dialog  -->
  </div><!--modal --> 
<!-- end LoginModal --> 

