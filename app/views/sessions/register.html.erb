

<h1>This's gonna be more more more & even more beautiful</h1>

<h3>Register here if you wanna see our AWESOME stuff</h3>
</br>
<% if @errors %>
<%=errors%>
  <ul>
    <% @errors.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for :user, url: register_path do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit %>
<% end %>

<h3> or Login :D </h3>


<%= form_tag login_path do %>
  <%= text_field_tag :email, nil, placeholder: "email" %>
  <%= password_field_tag :password, nil, placeholder: "password" %>

  <%= submit_tag ("GO") %>
<% end %>